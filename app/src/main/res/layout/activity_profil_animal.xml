<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.twins.meeter.ui.profileAnimal.ProfileAnimalActivity">

    <RelativeLayout
        android:id="@+id/toolbar_registration"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gray_background"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/title_tool_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/photo_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/cat_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Порода:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/type_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Цена:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/price_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Пол:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/sex_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Город:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/city_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Возраст:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/age_view"
                    style="@style/value_text_view" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Вязок:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/breeding_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Сертификаты:"
                    style="@style/key_text_view" />

                <TextView
                    android:id="@+id/certification_view"
                    style="@style/value_text_view" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контакты скрыты"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
