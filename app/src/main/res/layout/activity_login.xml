<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.twins.meeter.ui.activitiesStart.LoginActivity">


    <ImageView
        android:id="@+id/logo_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pre_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:paddingTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />


    <Button
        android:id="@+id/google_sing_up_button"
        android:drawableLeft="@drawable/ic_google_plus_logo"
        android:text="@string/login_with_google"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_auth"
        android:backgroundTint="@color/google"
        android:layout_marginTop="80dp"
        style="@style/auth_button" />

    <Button
        android:id="@+id/facebook_sing_up_button"
        android:drawableLeft="@drawable/ic_facebook"
        android:text="@string/login_with_facebook"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_sing_up_button"
        android:backgroundTint="@color/facebook"
        style="@style/auth_button" />

</android.support.constraint.ConstraintLayout>
